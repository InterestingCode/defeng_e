<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/px15"
    android:paddingLeft="@dimen/px24"
    android:paddingRight="@dimen/px24"
    android:paddingTop="@dimen/px15">

    <TextView
        android:id="@+id/message_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px10"
        android:layout_toLeftOf="@+id/message_time_tv"
        android:singleLine="true"
        android:text="实时提醒"
        android:textColor="@color/black_333"
        android:textSize="@dimen/font_30px" />

    <TextView
        android:id="@id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/message_title_tv"
        android:layout_alignParentRight="true"
        android:text="2106.08.25"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/font_24px" />

    <TextView
        android:id="@+id/message_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_title_tv"
        android:layout_marginTop="@dimen/px10"
        android:maxLines="2"
        android:text="根据当前天气信息及实况数据分析，将对水稻、大豆、小麦作物带来一定影响，敬请关注！"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/font_24px" />

</RelativeLayout>