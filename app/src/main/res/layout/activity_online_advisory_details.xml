<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:id="@+id/header_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/px20"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvUserFace"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_tab_txt_color_select"
                    android:textSize="@dimen/font_32px" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/font_30px" />

                <TextView
                    android:id="@+id/tvUserType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_toRightOf="@+id/tvName"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/font_30px" />

                <TextView
                    android:id="@+id/tvCreateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_666"
                    android:textSize="@dimen/font_30px" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/px20"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/font_32px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivImage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivImage3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tvUpsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px8"
                android:textColor="@color/black_333"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px40"
                android:text="评论"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tvCommentsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px8"
                android:textColor="@color/black_333"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px40"
                android:text="阅读"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/font_30px" />

            <TextView
                android:id="@+id/tvReadNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px8"
                android:textColor="@color/black_333"
                android:textSize="@dimen/font_30px" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/px1"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivUpsBtn"
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px36"
                android:src="@drawable/ic_zan" />

            <ImageView
                android:id="@+id/ivCommentsBtn"
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px36"
                android:layout_marginLeft="@dimen/px40"
                android:src="@drawable/ic_online_message" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/BaseHorizontalLine" />

    <ListView
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/comment_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View style="@style/BaseHorizontalLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentBtn"
                android:layout_width="@dimen/px150"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_17px"
                android:background="@drawable/comment_corner_btn"
                android:gravity="center"
                android:padding="@dimen/px15"
                android:text="评论"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/font_15px"
                android:layout_toLeftOf="@id/commentBtn"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/comment_edit"
                    style="@style/BaseText.black333_24px"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px79"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="120"
                    android:paddingLeft="@dimen/font_15px"
                    android:paddingRight="@dimen/font_15px" />

                <View style="@style/BaseHorizontalLine" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>