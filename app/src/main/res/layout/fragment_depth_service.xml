<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/weather_page_lr_margin"
                    android:layout_marginRight="@dimen/weather_page_lr_margin"
                    android:layout_marginTop="@dimen/weather_page_lr_margin"
                    android:background="@drawable/bg_crop_parameters"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDepthFacilities"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px60"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px20"
                        android:drawableLeft="@drawable/ic_depth_location"
                        android:drawablePadding="@dimen/px10"
                        android:drawableRight="@drawable/ic_depth_details"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/font_24px" />

                    <LinearLayout
                        android:id="@+id/tvAgriculturalFacilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px25"
                        android:paddingLeft="@dimen/px25"
                        android:paddingTop="@dimen/px25">

                        <ImageView
                            android:layout_width="@dimen/px270"
                            android:layout_height="@dimen/px270"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/px20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/test_depth" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    style="@style/BaseText.green_24px"
                                    android:text="种植作物" />

                                <TextView
                                    android:id="@+id/tvCropName"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px7"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    style="@style/BaseText.green_24px"
                                    android:text="作物品种" />

                                <TextView
                                    android:id="@+id/tvCropTypeName"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/px1"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px7"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    style="@style/BaseText.green_24px"
                                    android:text="作物特性" />

                                <TextView
                                    android:id="@+id/tvCropPropertyNames"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px7"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    style="@style/BaseText.green_24px"
                                    android:text="播种期" />

                                <TextView
                                    android:id="@+id/tvSowingTime"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px7"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    style="@style/BaseText.green_24px"
                                    android:text="定植期" />

                                <TextView
                                    android:id="@+id/tvPlantingTime"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/px7"
                                android:background="@drawable/shape_gray_f0f0f0_bg_with_radius"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/px5"
                                android:paddingLeft="@dimen/px15"
                                android:paddingRight="@dimen/px15"
                                android:paddingTop="@dimen/px5">

                                <TextView
                                    android:id="@+id/textView"
                                    style="@style/BaseText.green_24px"
                                    android:text="种植面积亩" />

                                <TextView
                                    android:id="@+id/tvAreaNum"
                                    style="@style/BaseText.gray666_24px"
                                    android:layout_width="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/px10"
                            android:src="@drawable/right_gray_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/agriculture_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px350"
                    android:layout_marginLeft="@dimen/weather_page_lr_margin"
                    android:layout_marginRight="@dimen/weather_page_lr_margin"
                    android:layout_marginTop="@dimen/weather_page_lr_margin"
                    android:background="@drawable/bg_actual_farming"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px62">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px20"
                            android:drawableLeft="@drawable/ic_agriculture"
                            android:drawablePadding="@dimen/px10"
                            android:gravity="center"
                            android:text="农业小博士"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_30px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/px15"
                        android:paddingRight="@dimen/px10"
                        android:paddingTop="@dimen/px30">

                        <TextView
                            android:id="@+id/tvDoctorTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/font_30px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDoctorContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tvDoctorTitle"
                            android:layout_marginTop="@dimen/px30"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/px10"
                            android:textColor="#333333"
                            android:textSize="@dimen/font_24px" />

                        <TextView
                            android:id="@+id/tvDoctorTime"
                            style="@style/BaseText.gray999_24px"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnFarming"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px321"
                    android:layout_marginLeft="@dimen/weather_page_lr_margin"
                    android:layout_marginRight="@dimen/weather_page_lr_margin"
                    android:layout_marginTop="@dimen/weather_page_lr_margin"
                    android:background="@drawable/bg_actual_farming"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px62">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px20"
                            android:drawableLeft="@drawable/ic_sugestion"
                            android:drawablePadding="@dimen/px10"
                            android:gravity="center"
                            android:text="农事建议"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_30px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px15">


                        <TextView
                            android:id="@+id/tvSuggestTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px20"
                            android:textColor="@color/black_333"
                            android:textSize="@dimen/font_30px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSuggestTime"
                            style="@style/BaseText.gray999_24px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/tvSuggestContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tvSuggestTitle"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/px10"
                            android:paddingTop="@dimen/px30"
                            android:textColor="#333333"
                            android:textSize="@dimen/font_24px" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/weather_page_lr_margin"
                    android:layout_marginRight="@dimen/weather_page_lr_margin"
                    android:layout_marginTop="@dimen/weather_page_lr_margin"
                    android:background="@drawable/bg_farming_info"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnDepthDiary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px62"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px20"
                        android:drawableLeft="@drawable/ic_depth_diary"
                        android:drawablePadding="@dimen/px10"
                        android:drawableRight="@drawable/ic_arrow_more"
                        android:gravity="center_vertical"
                        android:text="生长日记"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/font_30px" />

                    <View style="@style/BaseHorizontalLine" />

                    <com.diesel.htweather.widget.FullListView
                        android:id="@+id/diaryList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/divider_line"
                        android:dividerHeight="@dimen/px1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px36"
                    android:layout_marginLeft="@dimen/weather_page_lr_margin"
                    android:layout_marginRight="@dimen/weather_page_lr_margin"
                    android:layout_marginTop="@dimen/px30">

                    <TextView
                        android:id="@+id/btnJust"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_just"
                        android:gravity="center"
                        android:padding="@dimen/px15"
                        android:text="我要体验"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_28px" />

                    <TextView
                        android:id="@+id/btnAsk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px26"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ask"
                        android:gravity="center"
                        android:padding="@dimen/px15"
                        android:text="我要咨询"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_28px" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/tvReturnTop"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px22"
            android:background="@drawable/bg_top"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px40"
                android:layout_height="@dimen/px40"
                android:src="@drawable/ic_top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顶部"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_28px" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px200"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/px184"
                android:layout_height="@dimen/px128"
                android:src="@drawable/ic_depth_log" />

            <ImageView
                android:id="@+id/tvDepthClose"
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px36"
                android:layout_gravity="right"
                android:src="@drawable/ic_depth_close" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="深度服务"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>


</LinearLayout>