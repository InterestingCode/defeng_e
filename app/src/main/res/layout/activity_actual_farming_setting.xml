<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diesel.htweather.user.ActualFarmingSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/actual_farming_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/add_area_tv"
        style="@style/UserCenterButton"
        android:drawableLeft="@drawable/icon_location_black"
        android:text="@string/add_area" />

    <View style="@style/BaseHorizontalLine" />

    <TextView
        android:id="@+id/watch_plants_tv"
        style="@style/UserCenterButton"
        android:drawableLeft="@drawable/icon_care_black"
        android:text="@string/watch_plants"
        android:visibility="gone" />

</LinearLayout>
