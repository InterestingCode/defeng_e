<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diesel.htweather.user.ActualFarmingSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/actual_farming_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_area_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/BaseText.black333_30px"
            android:layout_width="@dimen/px250"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_location_black"
            android:drawablePadding="@dimen/px24"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24"
            android:text="@string/add_area" />

        <TextView
            android:id="@+id/add_area_value_tv"
            style="@style/BaseText.gray999_30px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/px15"
            android:drawableRight="@drawable/ic_right_gray_arrow"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/px24" />

    </LinearLayout>


    <View style="@style/BaseHorizontalLine" />

    <LinearLayout
        android:id="@+id/add_plants_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/BaseText.black333_30px"
            android:layout_width="@dimen/px250"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_care_black"
            android:drawablePadding="@dimen/px15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px24"
            android:text="@string/watch_plants" />

        <TextView
            android:id="@+id/watch_plants_value_tv"
            style="@style/BaseText.gray999_30px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/px15"
            android:drawableRight="@drawable/ic_right_gray_arrow"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/px24" />
    </LinearLayout>

</LinearLayout>
