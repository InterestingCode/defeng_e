<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="简介"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/px24"
        android:paddingTop="@dimen/px24"
        android:text="深度服务简介"
        android:textColor="@color/black_333"
        android:textSize="@dimen/font_36px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:lineSpacingExtra="@dimen/px10"
        android:paddingBottom="@dimen/px40"
        android:paddingLeft="@dimen/px23"
        android:paddingRight="@dimen/px23"
        android:paddingTop="@dimen/px16"
        android:textColor="@color/black_333"
        android:textSize="@dimen/font_24px" />
</LinearLayout>