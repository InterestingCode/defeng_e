<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/px24">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_growth_diary"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px60"
            android:gravity="center_horizontal|bottom"
            android:text="农历"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tvGrowthLunar"
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px80"
            android:gravity="center"
            android:text="十月初七"
            android:textColor="@color/black_333"
            android:textSize="@dimen/font_30px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px140"
        android:paddingBottom="@dimen/px10"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px10"
        android:paddingTop="@dimen/px10">

        <TextView
            android:id="@+id/tvGrowthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="德丰e农崇州气象为农深度服务"
            android:textColor="@color/black_333"
            android:textSize="@dimen/font_30px" />

        <TextView
            android:id="@+id/tvGrowthTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="2016-07-12"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/font_24px" />

        <TextView
            android:id="@+id/tvGrowthReadNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="阅读 63"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/font_24px" />
    </RelativeLayout>

</LinearLayout>