<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_activity</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listPopupWindowStyle">@null</item>
    </style>

    <style name="Theme.App.Launch" parent="AppTheme">
         <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="UserCenterButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px90</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/px15</item>
        <item name="android:drawableRight">@drawable/ic_right_gray_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/px35</item>
        <item name="android:paddingRight">@dimen/px24</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="WeatherCityTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/icon_area_normal</item>
        <item name="android:drawablePadding">@dimen/px20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/px24</item>
        <item name="android:paddingRight">@dimen/px24</item>
        <item name="android:textSize">@dimen/font_34px</item>
        <item name="android:textColor">@color/gray_666</item>
    </style>

    <style name="BaseHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/horizontal_divider_line</item>
    </style>

    <style name="BaseVerticalLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/horizontal_divider_line</item>
    </style>

    <style name="BaseHorizontalLineWithShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_main_tab_shadow</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseText.gray999_24px">
        <item name="android:textColor">@color/gray_999</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="BaseText.gray999_30px">
        <item name="android:textColor">@color/gray_999</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="BaseText.gray666_24px">
        <item name="android:textColor">@color/gray_666</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="BaseText.gray666_30px">
        <item name="android:textColor">@color/gray_666</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="BaseText.black333_24px">
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="BaseText.black333_30px">
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="BaseText.white_24px">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="BaseText.white_30px">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="BaseText.green_24px">
        <item name="android:textColor">@color/bg_top_header</item>
        <item name="android:textSize">@dimen/font_24px</item>
    </style>

    <style name="BaseText.green_30px">
        <item name="android:textColor">@color/bg_top_header</item>
        <item name="android:textSize">@dimen/font_30px</item>
    </style>

    <style name="activityDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PasswordInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px90</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginLeft">@dimen/px24</item>
        <item name="android:layout_marginRight">@dimen/px24</item>
        <item name="android:layout_marginTop">@dimen/px35</item>
        <item name="android:background">@drawable/bg_password_input_box</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/px30</item>
        <item name="android:paddingRight">@dimen/px30</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:textSize">@dimen/font_40px</item>
    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
