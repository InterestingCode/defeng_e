<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CommonHeaderView">
        <attr name="center_title" format="string" /> <!-- 头部中间标题 -->
        <attr name="left_type" format="enum">
            <enum name="text" value="0" /> <!-- 通用头部左侧显示类型-仅文本 -->
            <enum name="text_and_text" value="1" /> <!-- 通用头部左侧显示类型-两个文本 -->
            <enum name="icon" value="2" /> <!-- 通用头部左侧显示类型-仅图标 -->
        </attr>
        <attr name="right_type" format="enum">
            <enum name="icon" value="0" /> <!-- 通用头部右侧显示类型-仅图标 -->
            <enum name="icon_and_icon" value="1" /> <!-- 通用头部右侧显示类型- 两个图标 -->
            <enum name="text" value="2" /> <!-- 通用头部右侧显示类型-仅文本 -->
            <enum name="icon_and_dot" value="3" /> <!-- 通用头部右侧显示类型-图标和小红点 -->
            <enum name="text_or_icon" value="4" /> <!-- 通用头部右侧显示类型-文本或者图标 -->
        </attr>
    </declare-styleable>

    <declare-styleable name="TabMenu">
        <attr name="tabChecked" format="boolean" />
        <attr name="tabDrawable" format="reference" />
        <attr name="tabTextColor" format="reference|color" />
        <attr name="tabTextSize" format="reference|dimension" />
        <attr name="tabText" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tabChecked_1" format="boolean" />
        <attr name="tabDividerVisibility" format="boolean" />
        <attr name="tabDividerColor" format="reference|color" />
        <attr name="tabIndicatorColor" format="reference|color" />
        <attr name="tabTextColor_1" format="reference|color" />
        <attr name="tabTextSize_1" format="reference|dimension" />
        <attr name="tabText_1" format="reference|string" />
        <attr name="tabName_1" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <attr name="horizontal_grid_step" format="integer" min="0" />
        <attr name="vertical_grid_step" format="integer" min="0" />
        <attr name="horizontal_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid" format="boolean" />
        <attr name="vertical_grid_sublines" format="boolean" />
        <attr name="horizontal_grid" format="boolean" />
        <attr name="horizontal_grid_sublines" format="boolean" />
        <attr name="horizontal_grid_color" format="color" />
        <attr name="vertical_grid_color" format="color" />
        <attr name="horizontal_grid_sublines_color" format="color" />
        <attr name="vertical_grid_sublines_color" format="color" />
        <attr name="horizontal_grid_thikness" format="dimension" />
        <attr name="vertical_grid_thikness" format="dimension" />
        <attr name="horizontal_grid_sublines_thikness" format="dimension" />
        <attr name="vertical_grid_sublines_thikness" format="dimension" />
        <attr name="horizontal_values" format="boolean" />
        <attr name="vertical_values" format="boolean" />
        <attr name="horizontal_values_color" format="color" />
        <attr name="vertical_values_color" format="color" />
        <attr name="horizontal_values_size" format="dimension" />
        <attr name="vertical_values_size" format="dimension" />
    </declare-styleable>

</resources>